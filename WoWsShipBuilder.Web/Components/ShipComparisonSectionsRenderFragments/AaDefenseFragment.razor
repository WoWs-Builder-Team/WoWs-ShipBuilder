            </CellTemplate>
        </TemplateColumn>

        <TemplateColumn Hidden="@(hide && element.hiddenColumns[$"{ShipComparisonDataSections.AntiAir.ShipComparisonDataSectionToString()}_{columnTitleMediumAuraDps}"])" T="GridDataWrapper" Title="@columnTitleMediumAuraDps" HeaderClass="column-text-center" CellClass="column-text-center">
            <CellTemplate>
                @if (context.Item.MediumAaConstantDamage is not null)
                {
                    <MudText Typo="Typo.body2">
                        @context.Item.MediumAaConstantDamage
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.body2" Color="Color.Primary">
                        @ShipComparisonViewModel.DataNotAvailable
                    </MudText>
                }
            </CellTemplate>
        </TemplateColumn>

        <TemplateColumn Hidden="@(hide && element.hiddenColumns[$"{ShipComparisonDataSections.AntiAir.ShipComparisonDataSectionToString()}_{columnTitleMediumAuraHitChance}"])" T="GridDataWrapper" Title="@columnTitleMediumAuraHitChance" HeaderClass="column-text-center" CellClass="column-text-center">
            <CellTemplate>
                @if (context.Item.MediumAaHitChance is not null)
                {
                    <MudText Typo="Typo.body2">
