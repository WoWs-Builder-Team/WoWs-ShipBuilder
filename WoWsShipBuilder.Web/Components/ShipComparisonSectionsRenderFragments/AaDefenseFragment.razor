                else
                {
                    <MudText Typo="Typo.body2" Color="Color.Primary">
                        @ShipComparisonViewModel.DataNotAvailable
                    </MudText>
                }
            </CellTemplate>
        </TemplateColumn>

        <TemplateColumn Hidden="@(hide && element.hiddenColumns[$"{ShipComparisonDataSections.AntiAir.ShipComparisonDataSectionToString()}_{columnTitleMediumAura}"])" T="GridDataWrapper" Title="@columnTitleMediumAura" HeaderClass="column-text-center" CellClass="column-text-center">
            <CellTemplate>
                @if (context.Item.MediumAaRange is not null)
                {
                    <MudText Typo="Typo.body2">
                        @context.Item.MediumAaRange
                    </MudText>
                }
