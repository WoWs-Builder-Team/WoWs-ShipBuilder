@using System.Reflection
@using WoWsShipBuilder.Features.ShipStats

<Router AppAssembly="@typeof(AppRouter).Assembly" AdditionalAssemblies="@assemblies">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(DesktopLayout)"/>
        <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(DesktopLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code
{
    private readonly List<Assembly> assemblies = new() { typeof(ShipStats).Assembly };
}
