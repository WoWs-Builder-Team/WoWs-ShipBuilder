@using Avalonia
@using Avalonia.Controls.ApplicationLifetimes
@using DynamicData.Binding
@using ReactiveUI
@using WoWsShipBuilder.Desktop.Features.Settings
@using WoWsShipBuilder.Desktop.Infrastructure
@using WoWsShipBuilder.Infrastructure
